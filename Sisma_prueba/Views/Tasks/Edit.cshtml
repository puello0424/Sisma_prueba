@model Sisma_prueba.Models.Task

@{
    ViewData["Title"] = "Edit";
}



<h4>Editar tarea</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Tarea" class="control-label"></label>
                <input asp-for="Tarea" class="form-control" />
                <span asp-validation-for="Tarea" class="text-danger"></span>
            </div>
            <div class="form-group" id="descripcionDiv">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Completada" class="control-label"></label>
                <input asp-for="Completada" type="checkbox" id="completadaCheckbox" />
                <span asp-validation-for="Completada" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Regresar</a>
            </div>
        </form>
    </div>

    <script>
        document.getElementById('completadaCheckbox').addEventListener('change', function () {
            var descripcionDiv = document.getElementById('descripcionDiv');
            descripcionDiv.style.display = this.checked ? 'none' : 'block';
        });
    </script>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
